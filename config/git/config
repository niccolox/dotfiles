[user]
    name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
    email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>

[color]
    diff = auto
    status = auto
    branch = auto

[color "branch"]
    current = yellow reverse
    local = yellow

[color "diff"]
    meta = yellow

[color "status"]
    added = yellow
    change = green
    untracked = cyan

[status]
    relativePaths = false

[alias]
    br = branch
    co = checkout
    lsf = ls-files
    d = diff
    dc = diff --cached
    lc = log ORIG_HEAD.. --stat --no-merges
    gl = log --decorate --stat --graph --pretty=format:'%C(yellow)%h%Creset %Cblue%an%Creset: %C(cyan)%s %Creset(%cr)%n'
    st = status -sb

[core]
    excludesfile = <%= ENV['HOME'] %>/.gitignore
    editor = vim
    autocrlf = input

[apply]
    whitespace = nowarn

[rerere]
    enabled = 1
    autoupdate = 1

[format]
    pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset

[github]
    user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>

[format]
    pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset

[push]
    default = current
